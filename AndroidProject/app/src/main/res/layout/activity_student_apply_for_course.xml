<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentApplyForCourseActivity">

    <!-- Course Photo -->
    <ImageView
        android:id="@+id/imageViewCoursePhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/course"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Course Title -->
    <TextView
        android:id="@+id/textViewCourseTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Course Title:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCoursePhoto" />

    <TextView
        android:id="@+id/textViewCourseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Course Title"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/textViewCourseTitleLabel"
        app:layout_constraintTop_toTopOf="@id/textViewCourseTitleLabel" />

    <!-- Topics -->
    <TextView
        android:id="@+id/textViewTopicsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Topics:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCourseTitle" />

    <TextView
        android:id="@+id/textViewTopics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Topics"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/textViewTopicsLabel"
        app:layout_constraintTop_toTopOf="@id/textViewTopicsLabel" />

    <!-- Prerequisites -->
    <TextView
        android:id="@+id/textViewPrerequisitesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Prerequisites:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTopics" />

    <TextView
        android:id="@+id/textViewPrerequisites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Prerequisites"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/textViewPrerequisitesLabel"
        app:layout_constraintTop_toTopOf="@id/textViewPrerequisitesLabel" />

    <!-- Instructor Name -->
    <TextView
        android:id="@+id/textViewInstructorNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Instructor Email:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrerequisites" />

    <TextView
        android:id="@+id/textViewInstructorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Instructor Email"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/textViewInstructorNameLabel"
        app:layout_constraintTop_toTopOf="@id/textViewInstructorNameLabel" />

    <!-- Start Date -->
    <TextView
        android:id="@+id/textViewStartDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Start Date:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInstructorEmail" />

    <TextView
        android:id="@+id/textViewStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Start Date"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/textViewStartDateLabel"
        app:layout_constraintTop_toTopOf="@id/textViewStartDateLabel" />

    <!-- End Date -->
    <TextView
        android:id="@+id/textViewEndDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="End Date:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStartDate" />

    <TextView
        android:id="@+id/textViewEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="End Date"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/textViewEndDateLabel"
        app:layout_constraintTop_toTopOf="@id/textViewEndDateLabel" />

    <!-- Venue -->
    <TextView
        android:id="@+id/textViewVenueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Venue:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEndDate" />

    <TextView
        android:id="@+id/textViewVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Venue"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/textViewVenueLabel"
        app:layout_constraintTop_toTopOf="@id/textViewVenueLabel" />

    <!-- Days -->
    <TextView
        android:id="@+id/textViewDaysLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Schedule:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVenue" />

    <TextView
        android:id="@+id/textViewSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Schedule"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/textViewDaysLabel"
        app:layout_constraintTop_toTopOf="@id/textViewDaysLabel" />



    <!-- Apply Button -->
    <Button
        android:id="@+id/buttonApply"
        android:layout_width="159dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSchedule" />

</androidx.constraintlayout.widget.ConstraintLayout>
